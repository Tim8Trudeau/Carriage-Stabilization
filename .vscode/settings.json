{
    "github.copilot.enable": {
        "*": false
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": [
        "source.unusedImports"
    ],
    "window.restoreWindows": "one",
    "editor.defaultFormatter": "charliermarsh.ruff",
    "workbench.settings.useSplitJSON": false,
    "window.density.editorTabHeight": "compact",
    "testing.coverageToolbarEnabled": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "json.trace.server": "messages",
    "python.testing.pytestEnabled": true,
    "debugpy.showPythonInlineValues": true,
    "github.copilot.codeEdits.enable": false,
    "github.copilot.languages": {
    "python": false,
    "plaintext": false,
    "markdown": false
    },
    "github.copilot.editor.inlineSuggest.enable": false,
    "github.copilot.chat.codeExecution.enabled": false,
    "github.copilot.editor.enableCodeActions": false,
    "github.copilot.chat.enableCodeActions": false,
    "github.copilot.advanced": {
        "runEditCommands": false,
        "enableInlineCompletions": false
    },
    "github.copilot.feedback.enableNotifications": false,
    "github.copilot.suggestions.enabled": false,
    "github.copilot.workspaceHints.enabled": false,
    "git.suggestSmartCommit": false,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.quickOpen.closeOnFocusLost": false,

    // Auto-save behavior
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,

    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "workbench.settings.editor": "json",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.closeEmptyGroups": false,

    "git.confirmSync": false,
    "workbench.startupEditor": "none",

    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "git.autofetch": true
}
